
/* 详情页面头部区域 */
page{
  background-color: #F4F3F8;
}
.innerbox{
  border-top: 1px solid #e7e7e7;
  padding: 30rpx;
  background-color: #fff;
}
.innerbox>text{
  display: block;
}
.innerbox>view{
  margin-bottom: 20rpx;
}
.innerbox>view>text:nth-child(1){
  font-size: 27rpx;
  color: #666;
}
.innerbox>view>text:nth-child(2){
  float: right;
  font-size: 27rpx;
  color: #52CAC1;
}
.innerbox>.textneed{
  font-size: 25rpx;
  color: #999;
}

.innerbox>.otherbox{
  display: flex;
}
.innerbox>.otherbox>.box{
  width:120rpx;
  height: 50rpx;
  background-color: #52CAC1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 29rpx;
  margin-right: 20rpx;
  color: #009999;
  font-size: 23rpx;
  opacity: 0.79;
}
.innerbox>.otherbox>.box>text{
  opacity: 1;
}
.innerbox>.otherbox>.box:nth-child(2){
  background-color:#FBF7D1;
  color:#999900;
}
.innerbox>.otherbox>.box:nth-child(3){
  background-color: #DBF1FF;
  color: #5DB3AC;
}
.innerbox>.otherbox>.box:nth-child(4){
  background-color: #CD9E6A;
  color: #FFFFFF;
}
/* 联系方式 */
.topmsg{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #999;
  padding:8rpx;
  background-color: #fff;
}
.topmsg>image{
  width: 8rpx;
  height: 53rpx;
  margin-left:23rpx;
  margin-right:19rpx; 
}
.topmsg>text{
  font-size: 27rpx;
  color: #333;
}
/* 联系方式内容 */
.inner{
  padding: 10rpx 60rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.inner image{
  width: 40rpx;
  height: 40rpx;
}
.inner text{
  font-size: 23rpx;
  color: #666666;
  margin-left:40rpx;
}
.inner>view{
  display: flex;
  align-items: center;
}
.inner>.celphone>image{
  width: 52rpx;
  height: 52rpx;
}
.inner>.celphone{
  display: flex;
  justify-content: flex-end;
}
/* 职位详情顶部bar */
.jobdetail{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #999;
  padding:8rpx;
  background-color: #fff;
}
.jobdetail>image{
  width: 8rpx;
  height: 53rpx;
  margin-left:23rpx;
  margin-right:19rpx; 
}
.jobdetail>text{
  font-size: 27rpx;
  color: #333;
}
.detail{
  background-color: #fff;
}
.detail>text{
  padding:30rpx;
  font-size: 24rpx;
  color: #666;
  padding-right: 52rpx;
  display: block;
}
