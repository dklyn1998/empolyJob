.topimg{
  width: 100%;
  position: relative;
}
.topimg>.banner{
  width: 100%;
}
.topimg>.pic{
  width: 210rpx;
  height: 210rpx;
  position: absolute;
  top: 20%; 
  transform: translateY(-50%);
  left: 50%; 
  transform: translatex(-50%);
}
.success{
  display: block;
  color: #333333;
  font-size: 36rpx;
  text-align: center;
  margin-top: 30rpx;
}
.com{
  display: block;
  color: #666666;
  font-size: 27rpx;
  text-align: center;
  margin-top: 40rpx;
}
button{
  margin-top: 150rpx;
  width: 80%;
  background-color: #52CAC1;
  color: #fff;
  border: none;
  height: 80rpx;
  border-radius: 40rpx;
}