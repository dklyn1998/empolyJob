
page{
  position: relative;
}
/* 点击变蓝色 */
.active{
  color: #52CAC1;
}

.topbar{
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #eee;
  height: 80rpx;
  width: 100%;
  background-color: #fff;
  z-index: 100;
}
.topbar>text{
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.topbar>text:nth-child(2){
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
}
/* 最新职位 */
.newjob{
  display: flex;
  justify-content: flex-start;
  background-color:#fff; 
  flex-direction: column;
  margin-bottom: 42rpx;
  margin-top: 80rpx;
}

.newjob>.innerbox{
  border-top: 1px solid #e7e7e7;
  padding: 30rpx;
}
.newjob>.innerbox>text{
  display: block;
}
.newjob>.innerbox>view{
  margin-bottom: 20rpx;
}
.newjob>.innerbox>view>text:nth-child(1){
  font-size: 27rpx;
  color: #666;
}
.newjob>.innerbox>view>text:nth-child(2){
  float: right;
  font-size: 27rpx;
  color: #52CAC1;
}
.newjob>.innerbox>.textneed{
  font-size: 25rpx;
  color: #999;
}
.newjob>.innerbox>text:last-child{
  float: right;
  font-size: 22rpx;
  color: #999;
}
.newjob>.innerbox>.otherbox{
  display: flex;
}
.newjob>.innerbox>.otherbox>.box{
  width:120rpx;
  height: 50rpx;
  background-color: #52CAC1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 29rpx;
  margin-right: 20rpx;
  color: #009999;
  font-size: 23rpx;
  opacity: 0.79;
}
.newjob>.innerbox>.otherbox>.box>text{
  opacity: 1;
}
.newjob>.innerbox>.otherbox>.box:nth-child(2){
  background-color:#FBF7D1;
  color:#999900;
}
.newjob>.innerbox>.otherbox>.box:nth-child(3){
  background-color: #DBF1FF;
  color: #5DB3AC;
}
.newjob>.innerbox>.otherbox>.box:nth-child(4){
  background-color: #CD9E6A;
  color: #FFFFFF;
}
/* 全局颜色变黑 */
.bgcolor{
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  top:85rpx;
  height: 100%;
  width: 100%;
  z-index: 100;
}
/* 全城市下拉栏 */
.allcity{
  position: fixed;
  display: flex;
  justify-content: center;
  flex-direction: column;
  left: 0;
  top: 85rpx;
  background-color: #fff;
  width: 100%;
  z-index: 102;
}
.allcity>text{
  font-size: 27rpx;
  border-bottom: 1rpx #ccc solid;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 70rpx;
  background-color: #fff;
}
/* 职位类别 */
.kind{
  position: fixed;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-items: center;
  background-color: #fff;
  top: 85rpx;
  z-index: 102;
  left: 0;
  width: 100%;
  padding-left: 15rpx;
  padding-bottom: 30rpx;
}
.kind>text{
  width: 120rpx;
  height: 50rpx;
  color: #fff;
  background-color: #DADADA;
  margin-top: 18rpx;
  margin-right: 30rpx;
  text-align: center;
  font-size: 26rpx;
  line-height: 50rpx;
}
.kind>text:nth-child(5n){
  margin-right: 0;
}
.kind>.active1{
  background-color: #52CAC1;
}
.kind>.order{
  width:200rpx;
}
