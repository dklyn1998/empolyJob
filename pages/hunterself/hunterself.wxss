/* 顶部图片 */
.topmsg{
  position: relative;
  width: 100%;
  height:330rpx;
}
.bgimg{
  width: 100%;
  height: 330rpx;
}
.usermsg{
  position: absolute;
  top: 0;
  display: flex;
  align-items: center;
}
.usermsg>image {
  height: 120rpx;
  width: 120rpx;
  margin-left: 60rpx;
  margin-top: 100rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
.usermsg>view{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.usermsg>view>text{
  font-size: 34rpx;
  color: #fff;
}
.usermsg>view>text:nth-child(2){
  font-size: 26rpx;
  margin-top: 20rpx;
}
.usermsg>view{
  margin-top: 100rpx;
}
.shezhi{
  position: absolute;
  width: 42rpx;
  height: 42rpx;
  top: 80rpx;
  right: 50rpx;
}

