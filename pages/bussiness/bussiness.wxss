page{
  background-color: #E9E8EC;
}
.topmsg{
  height: 80rpx;
  line-height: 80rpx;
  padding:0 30rpx ;
}
.reg,.city{
  font-size: 34rpx;
  color: #333;
}
.middlemsg{
  display: flex;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 27rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
  background-color: #F4F3F8;
  padding:0 30rpx;
}
.middlemsg>input{
  margin-left: 100rpx;
}
.middlemsg>picker{
  flex: 1;
  height: 80rpx;
  margin-left: 100rpx;
}
