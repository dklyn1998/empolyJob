.topbar{
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #eee;
  height: 80rpx;
}
.topbar>text{
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.topbar>text:nth-child(2){
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
}
/* 最新职位 */
.newjob{
  display: flex;
  justify-content: flex-start;
  background-color:#fff; 
  flex-direction: column;
  margin-bottom: 42rpx;
}

.newjob>.innerbox{
  border-top: 1px solid #e7e7e7;
  padding: 30rpx;
}
.newjob>.innerbox>text{
  display: block;
}
.newjob>.innerbox>view{
  margin-bottom: 20rpx;
}
.newjob>.innerbox>view>text:nth-child(1){
  font-size: 27rpx;
  color: #666;
}
.newjob>.innerbox>view>text:nth-child(2){
  float: right;
  font-size: 27rpx;
  color: #52CAC1;
}
.newjob>.innerbox>.textneed{
  font-size: 25rpx;
  color: #999;
}
.newjob>.innerbox>text:last-child{
  float: right;
  font-size: 22rpx;
  color: #999;
}
.newjob>.innerbox>.otherbox{
  display: flex;
}
.newjob>.innerbox>.otherbox>.box{
  width:120rpx;
  height: 50rpx;
  background-color: #52CAC1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 29rpx;
  margin-right: 20rpx;
  color: #009999;
  font-size: 23rpx;
  opacity: 0.79;
}
.newjob>.innerbox>.otherbox>.box>text{
  opacity: 1;
}
.newjob>.innerbox>.otherbox>.box:nth-child(2){
  background-color:#FBF7D1;
  color:#999900;
}
.newjob>.innerbox>.otherbox>.box:nth-child(3){
  background-color: #DBF1FF;
  color: #5DB3AC;
}
.newjob>.innerbox>.otherbox>.box:nth-child(4){
  background-color: #CD9E6A;
  color: #FFFFFF;
}