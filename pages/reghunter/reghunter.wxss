page{
  background-color: #F4F3F8;
}

.topbanner{
  width: 100%;
  height: 500rpx;
}
.reg{
  font-size: 36rpx;
  color: #333;
  text-align: center;
  display: block;
}
.msg,.tel{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 150rpx;
  border-bottom: 1rpx solid #ccc;
}
.msg>image,.tel>image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 40rpx;
}
.tel>text,.msg>text{
  flex: 1;
  margin-left: 50rpx;
}
.tel>input,.msg>input{
  width: 250rpx;
  text-align: right;
  margin-right: 40rpx;
}
button{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #52CAC1;
  border: none;
  margin-top: 100rpx;
}